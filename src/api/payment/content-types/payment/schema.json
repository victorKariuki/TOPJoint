{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "method": {
      "type": "string"
    },
    "details": {
      "type": "json"
    },
    "mode": {
      "type": "enumeration",
      "enum": [
        "online",
        "offline"
      ]
    },
    "transactionId": {
      "type": "string"
    },
    "recieptNo": {
      "type": "string"
    },
    "amount": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "failed",
        "success"
      ],
      "default": "pending"
    },
    "reason": {
      "type": "text"
    },
    "mpesa_request_response": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::mpesa-request-response.mpesa-request-response",
      "mappedBy": "payment"
    }
  }
}
